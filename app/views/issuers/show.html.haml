= render 'general/menu' do
  %li
    %span.header #{@issuer.name}
  %li.spacer
  %li= link_to 'Barcode', barcode_issuer_url(@issuer)
  %li= link_to 'Edit', edit_issuer_url(@issuer)
  %li= link_to 'Delete', issuer_url(@issuer), method: :delete, confirm: 'Are you sure?'
%main
  %p= @issuer.email
  %pre= @issuer.barcode
  %p
    Device Summary:
    %abbr.hoverable{ title: 'Overdues/Issues/Allowance' }= @issuer.device_summary
  - if @issuer.devices.empty?
    %p No devices issued
  - else
    Currently issuing:
    %ul
      - @issuer.devices.each do |device|
        %li= link_to device.name, device_path(device)

  %p
    = @issuer.notes
