- if admin.id.present?
  - url = setting_url(admin)
- else
  - url = settings_url
= form_with model: admin, url: url, local: true do |form|
  - if admin.errors.any?
    #error-explanation.alert.callout
      %h2
        = pluralize(admin.errors.count, 'error')
        prevented
        this admin from being saved:
      %ul
        - admin.errors.full_messages.each do |msg|
          %li= msg
  %p
    = form.label :email
    = form.text_field :email
  %p
    = form.submit
